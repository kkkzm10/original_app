<%# CSS・・・assets/stylesheets/shared/header.css %>
 <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="css/top.css"/>
    <title>Mate</title>
  </head>

<body>
<header class='top-page-header'>
  <div class='nav-left'>
    <ul class='lists-left'>
      <li><%= link_to 'Genre', "#", class: "category-list" %></li>
      <li><%= link_to 'Mate', users_path, class: "human-list" %></li>
    </ul>
  </div>
  <div class='nav-right'>  
    <ul class='lists-right'>   
     <% if user_signed_in? %>     
      <li><%= link_to 'Log-out', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
     <% else %> 
      <li><%= link_to 'Log-in', new_user_session_path, class: "login" %></li>
      <li><%= link_to 'Sign-up', new_user_registration_path, class: "sign-up" %></li>
     <% end %>  
    </ul>
  </div>  
</header>

 <div class="contents">
     <div class="first-view">
         <li><img src="/assets/top-image2.jpeg" alt="image1" class="top-image" /></li>
     </div>
      <div class="middle-content">
        <!-- 『Genre一覧』を表示する -->
        <%= link_to 'English', users_path, class: 'circle' %> 
        <%= link_to 'Programming', users_path, class: 'circle' %> 
        <%= link_to 'Chinese', users_path, class: 'circle' %> 


      </div>

      <!-- 『Mate候補たち』を表示する -->
      <div class="bottom-content">
          <h2 class="heading-name">Mate</h2>
        <ul class="mate-list">
          <li>
            <img src="/assets/mate-pic1.webp" alt="mate1" class="mate-image">
            <h4 class="mate-name">aaa</h4>
          </li>
          <li>
            <img src="/assets/mate-pic2.jpg" alt="mate2" class="mate-image">
            <h4 class="mate-name">bbb</h4>
          </li>
          <li>
            <img src="/assets/mate-pic3.jpeg" alt="mate3" class="mate-image">
            <h4 class="mate-name">ccc</h4>
          </li>
        </ul>
      </div>
    </div>

<%# furimaの参考コード %>
    <div class='user-contents'>
    <h2 class='title'>Mate</h2>
    <%= link_to 'User-List', "#", class: "subtitle" %>
    <ul class='user-lists'>
      <% @users.each do |user| %>
      <li class='list'>
        <%= link_to user_path(user.id) do %>
        <div class='user-img-content'>
           <% if user.image? %>      
            <%= image_tag user.image.url %>
         <% end %>
        </div>
        <div class='user-info'>
          <h3 class='user-name'>
            <%= user.last_name %>
          </h3>
        </div>
       <% end %>
      </li>
     <% end %> 
<%# furimaの参考コード %>

    <footer>
    </footer>
</body>

 



